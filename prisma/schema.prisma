generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DataUser {
  id        String   @id
  nama      String?
  role      Role
  no_hp     String
  id_ref    String?
  otp       String
  active    Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  TOKO // Menambahkan peran "TOKO"
  CUSTOMER // Menambahkan peran "CUSTOMER"
}

